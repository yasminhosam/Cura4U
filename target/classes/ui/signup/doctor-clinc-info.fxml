<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.signup.ClinicInfoController">

    <AnchorPane prefWidth="220" style="-fx-background-color: #E3F2FD;">
        <Label layoutX="20" layoutY="140" prefWidth="180" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-alignment: center;" text="Provide your clinic details to complete your profile." wrapText="true" />
    </AnchorPane>

    <AnchorPane prefWidth="380">
        <children>
            <Label layoutX="120" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Clinic Info" />

            <Label layoutX="30" layoutY="70" text="Address">
                <font><Font name="System Bold" size="12" /></font>
            </Label>
            <TextField fx:id="tf_address" layoutX="110" layoutY="63" prefWidth="220">
                <font><Font name="Arial Rounded MT Bold" size="14" /></font>
            </TextField>

            <Label layoutX="30" layoutY="115" text="Department">
                <font><Font name="System Bold" size="12" /></font>
            </Label>
            <TextField fx:id="tf_department" layoutX="110" layoutY="108" prefWidth="220">
                <font><Font name="Arial Rounded MT Bold" size="14" /></font>
            </TextField>

            <Label layoutX="30" layoutY="160" text="Price">
                <font><Font name="System Bold" size="12" /></font>
            </Label>
            <TextField fx:id="tf_price" layoutX="110" layoutY="153" prefWidth="220">
                <font><Font name="Arial Rounded MT Bold" size="14" /></font>
            </TextField>

            <Label layoutX="30" layoutY="205" text="Description">
                <font><Font name="System Bold" size="12" /></font>
            </Label>
            <TextArea fx:id="tf_description" layoutX="110" layoutY="198" prefHeight="80" prefWidth="220">
                <font><Font name="Arial Rounded MT Bold" size="14" /></font>
            </TextArea>

            <Button fx:id="button_save" layoutX="135" layoutY="300" onAction="#handleSave" prefHeight="31" prefWidth="148" style="-fx-background-color: #1976D2;" text="Save">
                <font><Font name="Arial Rounded MT Bold" size="16" /></font>
            </Button>

            <Label fx:id="messageLabel" layoutX="110" layoutY="340" prefWidth="250" textFill="RED" />

        </children>
    </AnchorPane>
</HBox>
